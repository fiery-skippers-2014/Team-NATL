<div>
  <h2><%= @survey.title %></h2>
  <form id="survey<%= @survey.id %>" method="post" action="">
  <% @survey.questions.each_with_index do |question, question_number|  %>
    <%= question.text %><br>

        <% question.choices.each do |choice| %>
        <input type="radio" name="question<%= question.id %>" value="<%= choice.id %>"> <%= choice.text %><br>
        <% end %><br>
      <% end %>
        <br><input type="submit" value="submit">
      </form><br><br>
</div>